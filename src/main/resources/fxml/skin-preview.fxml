<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.Canvas?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.osuskin.tool.controller.SkinPreviewController" 
            prefWidth="900" prefHeight="700">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <!-- Title Bar -->
            <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="preview-header">
               <children>
                  <Label fx:id="lblSkinName" text="Skin Preview" styleClass="preview-title" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnClose" text="Close" onAction="#onClose" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
               </padding>
            </HBox>
            
            <!-- Audio Controls -->
            <VBox spacing="10.0" styleClass="audio-controls">
               <children>
                  <Label text="Audio Preview" styleClass="section-title" />
                  
                  <!-- Volume Control -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="Volume:" minWidth="60" />
                        <Slider fx:id="volumeSlider" min="0" max="100" value="50" 
                                showTickLabels="false" showTickMarks="false" 
                                prefWidth="200" />
                        <Label fx:id="lblVolume" text="50%" minWidth="40" />
                     </children>
                  </HBox>
                  
                  <!-- Sound Buttons -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Button fx:id="btnPlayHitsounds" text="Play Hitsounds" 
                                onAction="#onPlayHitsounds" prefWidth="120" />
                        <Button fx:id="btnPlayMisc" text="Play Misc Sounds" 
                                onAction="#onPlayMiscSounds" prefWidth="120" />
                        <Button fx:id="btnStopAudio" text="Stop" 
                                onAction="#onStopAudio" prefWidth="80" />
                     </children>
                  </HBox>
                  
                  <!-- Currently Playing -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="Now Playing:" />
                        <Label fx:id="lblNowPlaying" text="Nothing" styleClass="now-playing" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
               </padding>
            </VBox>
            
            <Separator />
         </children>
      </VBox>
   </top>
   
   <center>
      <!-- Gameplay Preview Canvas -->
      <StackPane BorderPane.alignment="CENTER">
         <children>
            <!-- Background for gameplay area -->
            <Rectangle fx:id="gameplayBackground" fill="#1a1a1a" />
            
            <!-- Main gameplay canvas -->
            <Canvas fx:id="gameplayCanvas" width="800" height="450" />
            
            <!-- Overlay canvas for UI elements -->
            <Canvas fx:id="overlayCanvas" width="800" height="450" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </StackPane>
   </center>
   
   <bottom>
      <!-- Controls and Info -->
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Separator />
            
            <!-- Playback Controls -->
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Button fx:id="btnPlay" text="▶ Play Animation" onAction="#onPlayAnimation" />
                  <Button fx:id="btnPause" text="⏸ Pause" onAction="#onPauseAnimation" />
                  <Button fx:id="btnReset" text="⏮ Reset" onAction="#onResetAnimation" />
                  <Separator orientation="VERTICAL" />
                  <CheckBox fx:id="chkLoop" text="Loop Animation" selected="true" />
                  <Separator orientation="VERTICAL" />
                  <Label text="Speed:" />
                  <Slider fx:id="speedSlider" min="0.5" max="2.0" value="1.0" 
                          showTickLabels="false" prefWidth="100" />
                  <Label fx:id="lblSpeed" text="1.0x" minWidth="35" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            
            <!-- Element Info -->
            <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="info-bar">
               <children>
                  <Label fx:id="lblElementCount" text="Elements: 0" />
                  <Label fx:id="lblMissingElements" text="Missing: 0" />
                  <Label fx:id="lblAnimationStatus" text="Ready" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>